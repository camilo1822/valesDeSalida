<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="ValesSalida" transaction-type="RESOURCE_LOCAL">
		<class>com.familia.vales.jpa.entities.DetalleVale</class>
		<class>com.familia.vales.jpa.entities.EstadoVale</class>
		<class>com.familia.vales.jpa.entities.MotivoVale</class>
		<class>com.familia.vales.jpa.entities.OperacionVale</class>
		<class>com.familia.vales.jpa.entities.UnidadMedidaVale</class>
		<class>com.familia.vales.jpa.entities.Usuario</class>
		<class>com.familia.vales.jpa.entities.Vale</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/vales_salida"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>			
	</persistence-unit>
</persistence>
